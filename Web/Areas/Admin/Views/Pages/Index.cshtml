@model IEnumerable<Web.Models.ViewModels.Pages.PageViewModel>

@{
    ViewBag.Title = "Pages";
}
@if (TempData["message"] != null)
{
    <div class="alert alert-success">@TempData["message"]</div>
}
<h2>Pages</h2>

<p>
    @Html.ActionLink("Create New Page", "AddPage")
</p>

@if (!Model.Any())
{
    <h1 class="alert alert-warning text-center">There are no pages :(</h1>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasSidebar)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasSidebar)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditPage", new { id = item.Id }) |
                @Html.ActionLink("Details", "PageDetails", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeletePage", new { id = item.Id })
            </td>
        </tr>
    }
    </table>
}


