@model IEnumerable<Web.Models.ViewModels.Pages.PageViewModel>

@{
    ViewBag.Title = "Pages";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-success">@TempData["message"]</div>
}

<h2>Pages</h2>

<p>
    @Html.ActionLink("Create New Page", "AddPage")
</p>

@if (!Model.Any())
{
    <h1 class="alert alert-warning text-center">There are no pages :(</h1>
}
else
{
    <table class="table sorting" id ="pages">
        <tr class="home">
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasSidebar)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model)
    {
        <tr id="id_@item.Id" class="@item.Slug">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasSidebar)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditPage", new { id = item.Id }) |
                @Html.ActionLink("Details", "PageDetails", new { id = item.Id })
                @if (item.Slug != "home") { 
                    @:| @Html.ActionLink("Delete", "DeletePage", new { id = item.Id }, new { @class = "delete" })
                }
            </td>
        </tr>
    }
    </table>
}

@section Scripts {
    <script
        src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js">
    </script>

<script>
    $(function () {

        //Confirm delete page
        $("a.delete").click(function() {
            if (!confirm("Are you sure you want to delete this page?")) return false;
        });


        //Sort pages
        $("table#pages tbody").sortable({
            items: "tr:not(.home)",
            placeholder: "ui-state-highlight",
            update: function() {
                var ids = $("table#pages tbody").sortable("serialize");
                var url = "/Admin/Pages/ReorderPages";

                $.post(url, ids, function(data) {});
            }
        });
    });
</script>
}