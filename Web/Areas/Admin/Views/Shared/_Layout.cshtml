<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Area</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="navbar navbar-inverse navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Admin Dashboard", "Index", "Dashboard", new { area = "Admin" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Pages", "Index", "Pages", new { area = "Admin" }, new { @class = "navbar-brand" })</li>
                <li>@Html.ActionLink("Sidebar", "EditSidebar", "Pages", new { area = "Admin" }, new { @class = "navbar-brand" })</li>
                <li>@Html.ActionLink("Products", "Products", "Store", new { area = "Admin" }, new { @class = "navbar-brand" })</li>
                <li>@Html.ActionLink("Categories", "Categories", "Store", new { area = "Admin" }, new { @class = "navbar-brand" })</li>
                <li>@Html.ActionLink("Orders", "Orders", "Store", new { area = "Admin" }, new { @class = "navbar-brand" })</li>
            </ul>
            <ul class="navbar-right">
                @Html.ActionLink("View Website Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", target = "_blank"})
            </ul>
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p>&diams; Admin area - Remember to @Html.ActionLink("sign out", "Index", "Home", new { area="" }, null) when finished.</p>
    </footer>
</div>

@Scripts.Render("~/bundles/scripts")
@RenderSection("scripts", false)
</body>
</html>